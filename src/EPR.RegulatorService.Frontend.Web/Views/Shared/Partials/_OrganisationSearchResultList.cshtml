@model EPR.RegulatorService.Frontend.Web.ViewModels.RegulatorSearchPage.OrganisationSearchResultsListViewModel

<h1 class="govuk-heading-xl govuk-!-margin-bottom-8">@Localizer["Table.Title"]</h1>

<table class="govuk-table responsive-table" aria-label="Organisation Application Listing">
  <thead role="rowgroup" class="govuk-table__head">
  <tr role="row" class="govuk-table__row">
    <th role="columnheader" scope="col" class="govuk-table__header epr-width-thirty-percent">@Localizer["Table.Header.Company"]</th>
    <th role="columnheader" scope="col" class="govuk-table__header epr-width-thirty-percent">@Localizer["Table.Header.OrganisationId"]</th>
    <th role="columnheader" scope="col" class="govuk-table__header epr-width-ten-percent">@Localizer["Table.Header.CompanyHouseNumber"]</th>
  </tr>
  </thead>
  <tbody class="govuk-table__body">

  <!-- look at the for-each-partial in razor -->
  @foreach (var organisation in Model.PagedOrganisationSearchResults)
  {
    <tr role="row" class="govuk-table__row">
      <td role="gridcell" class="govuk-table__cell vertical-middle-align">
        <span class="responsive-table__heading" aria-hidden="true">@Localizer["Table.Header.Company"]</span>
        <p class="govuk-body">
          <a href="@Url.ActionLink("RegulatorCompanyDetail",
                     "SearchManageApprovers",
                     new { organisationId = organisation.ExternalId })">
            @organisation.OrganisationName
          </a>
          <br/>
          @if (organisation.IsComplianceScheme)
          {
            <span>@Localizer["OrgType.ComplianceScheme.Yes"]</span>
          }
          else
          {
            <span>@Localizer["OrgType.ComplianceScheme.No"]</span>
          }
        </p>
      </td>
      <td role="gridcell" class="govuk-table__cell vertical-middle-align">
        <span class="responsive-table__heading" aria-hidden="true">@Localizer["Table.Header.OrganisationId"]</span>
        <p class="govuk-body">
          @organisation.OrganisationId
        </p>
      </td>
      <td role="gridcell" class="govuk-table__cell vertical-middle-align">
        <span class="responsive-table__heading" aria-hidden="true">@Localizer["Table.Header.CompanyHouseNumber"]</span>
        <p class="govuk-body">
          @organisation.CompanyHouseNumber
        </p>
      </td>
    </tr>
  }
  </tbody>
</table>
@await Html.PartialAsync("Partials/_PaginationNavigation", Model.PaginationNavigationModel)

