@using EPR.RegulatorService.Frontend.Web.ViewModels.Shared
@model LanguageSwitcherModel

@if (Model.SupportedCultures!.Count > 1 && Model.ShowLanguageSwitcher)
{
    <ul class="language-toggle">
        @foreach (var culture in Model.SupportedCultures!)
        {
            <li class="language-toggle__option">
                @if (Model.CurrentCulture!.Name == culture.Name)
                {
                    @culture.NativeName
                }
                else
                {
                    <a asp-controller="Culture" asp-action="UpdateCulture" asp-route-culture="@culture.Name" asp-route-returnUrl="@Model.ReturnUrl" class="govuk-link govuk-link--no-visited-state">@culture.NativeName</a>
                }
            </li>
        }
    </ul>
}
else
{
    <div class="language-toggle govuk-!-padding-bottom-8"></div>
}