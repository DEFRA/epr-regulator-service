@using EPR.RegulatorService.Frontend.Web.Extensions
@using EPR.RegulatorService.Frontend.Web.ViewModels.ReprocessorExporter.Accreditations.AccreditationStatus

@model PaymentReviewViewModel

@{
	ViewData["Title"] = "Check your answers";
}

<div class="govuk-width-container ">
  <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">

				<h1 class="govuk-heading-l">Check your answers for @Model.MaterialName.ToLower() accreditation</h1>

		<form asp-controller="AccreditationStatus" asp-action="MarkAsDulyMade" method="post">
        
          <dl class="govuk-summary-list">
			<div class="govuk-summary-list__row">
				<dt class="govuk-summary-list__key">
					Payment amount
				</dt>
				<dd class="govuk-summary-list__value">
					@Model.FeeAmount.ToDisplayCurrency()
				</dd>
				<dd class="govuk-summary-list__actions">
				</dd>
			</div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Full Payment received
              </dt>
              <dd class="govuk-summary-list__value">
                Yes
              </dd>
              <dd class="govuk-summary-list__actions">
                <a href="@Url.ActionLink("PaymentCheck", "AccreditationStatus")" class="govuk-link govuk-link--no-visited-state">Change</a>
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Payment method
              </dt>
              <dd class="govuk-summary-list__value">
                @Model.PaymentMethod!.ToString()
              </dd>
              <dd class="govuk-summary-list__actions">
				<a href="@Url.ActionLink("PaymentMethod", "AccreditationStatus")" class="govuk-link govuk-link--no-visited-state">Change</a>
              </dd>
            </div>

            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Payment date
              </dt>
              <dd class="govuk-summary-list__value">
                @Model.PaymentDate.ToDisplayDate()
              </dd>
              <dd class="govuk-summary-list__actions">
				<a href="@Url.ActionLink("PaymentDate", "AccreditationStatus")" class="govuk-link govuk-link--no-visited-state">Change</a>
              </dd>
            </div>

            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Date and time submitted
              </dt>
              <dd class="govuk-summary-list__value">
                @Model.SubmittedDate.ToDisplayDateAndTime()
              </dd>
              <dd class="govuk-summary-list__actions">
              </dd>
            </div>

            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Determination date
              </dt>
              <dd class="govuk-summary-list__value">
                @Model.DeterminationDate.ToDisplayDate() (@Model.DeterminationWeeks weeks)
              </dd>
              <dd class="govuk-summary-list__actions">
              </dd>
            </div>
          </dl>
        
          <button type="submit" class="govuk-button" data-module="govuk-button">
            Mark as Duly made
          </button>
        </form>
        
      </div>
    </div>
  </main>
</div>
