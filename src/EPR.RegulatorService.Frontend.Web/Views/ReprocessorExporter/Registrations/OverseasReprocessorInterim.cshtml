@using EPR.RegulatorService.Frontend.Core.Enums.ReprocessorExporter;
@{
    ViewData["Title"] = "Overseas reprocessor and interim site details";
}
@model int;

<div class="govuk-width-container ">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">
                <h1 class="govuk-heading-l">
                    <span class="govuk-caption-l">Plastic</span>
					Overseas reprocessing and interim sites
                </h1>
                <table class="govuk-table">
					<caption class="govuk-table__caption govuk-table__caption--m"> Overseas reprocessing sites</caption>
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header govuk-!-width-one-half">Site name</th>
                            <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Address</th>
                            <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Contact person</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <th scope="row" class="govuk-table__header">ABC manufacturers</th>
                            <td class="govuk-table__cell">
                                123 Penang way, Jakarta. 56543, Indonesia
                            </td>
                            <td class="govuk-table__cell">
                                Phil Collins<br>
                                <a href="#" class="govuk-link govuk-link--no-visited-state"> phil@abcmanufacturers.com</a>
                            </td>
                        </tr>
                        <tr class="govuk-table__row">
                            <th scope="row" class="govuk-table__header">123 manufacturers</th>
                            <td class="govuk-table__cell">
                                123 Belgium way, Brussels. 56543, Belgium
                            </td>
                            <td class="govuk-table__cell">
                                Joan Crawford <br>
                                <a href="#" class="govuk-link govuk-link--no-visited-state">joan@123manufacturers.com</a>
                            </td>
                        </tr>

                    </tbody>
                </table>
                <table class="govuk-table">
                    <caption class="govuk-table__caption govuk-table__caption--m"> Interim sites</caption>
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header govuk-!-width-one-half">Site name</th>
                            <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Address</th>
                            <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Contact person</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <th scope="row" class="govuk-table__header">ABC manufacturers</th>
                            <td class="govuk-table__cell">
                                123 Penang way, Jakarta. 56543, Indonesia
                            </td>
                            <td class="govuk-table__cell">
                                Phil Collins<br>
                                <a href="#" class="govuk-link govuk-link--no-visited-state"> phil@abcmanufacturers.com</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <div class="govuk-button-group !-margin-top-6">
                    <a href="@Url.Action("CompleteOverseasReprocessorInterim", "Registrations", new { registrationMaterialId = Model })" class="govuk-link">
                        <button type="submit" class="govuk-button" data-module="govuk-button">
                            Mark as reviewed
                        </button>
                    </a>
                    <a href="@Url.Action("QueryMaterialTask", "Registrations", new { registrationMaterialId = Model, taskName = RegulatorTaskType.OverseasReprocessorAndInterimSiteDetails.ToString() })" class="govuk-link">
                        <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                            Query overseas and interim site details
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </main>
</div>
