@using EPR.RegulatorService.Frontend.Core.Enums.ReprocessorExporter;
@{
	ViewData["Title"] = "Waste licences, permits or exemptions";
}
@model int

<div class="govuk-width-container ">

	<main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">

		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">
				<h1 class="govuk-heading-l">
					<span class="govuk-caption-l">Plastic</span>
					Waste licences, permits or exemptions
				</h1>

				<dl class="govuk-summary-list">
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Installation or PPC permit number
						</dt>
						<dd class="govuk-summary-list__value">
							DFG34573453
						</dd>
					</div>
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Waste carrier, broker or dealer registration number
						</dt>
						<dd class="govuk-summary-list__value">
							DFG34573453
						</dd>
					</div>
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Waste management licence or environmental permit number
						</dt>
						<dd class="govuk-summary-list__value">
							DFG34573453
						</dd>
					</div>
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Waste exemption reference
						</dt>
						<dd class="govuk-summary-list__value">
							DFG34573453
						</dd>
					</div>

				</dl>

				<br />

				<div class="govuk-button-group !-margin-top-6">
                    <a href="@Url.Action("CompleteWasteLicences", "Registrations", new { registrationId = Model })" class="govuk-link">
						<button type="submit" class="govuk-button" data-module="govuk-button">
                            Mark as reviewed
						</button>
					</a>
                    <a href="@Url.Action("QueryRegistrationTask", "Registrations", new { registrationId = Model, taskName = RegulatorTaskType.WasteLicensesPermitsAndExemptions.ToString() })" class="govuk-link">
						<button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
							Query waste licences, permits or exemptions
						</button>
					</a>
				</div>
			</div>

		</div>

	</main>
</div>
