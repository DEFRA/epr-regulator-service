@using EPR.RegulatorService.Frontend.Core.Enums.ReprocessorExporter;
@{
	ViewData["Title"] = "Waste licences, permits or exemptions";
}
@model int

<div class="govuk-width-container ">

  <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">
        <h1 class="govuk-heading-l">
          <span class="govuk-caption-l">Plastic</span>
          Waste licences, permits or exemptions
        </h1>
        
        <form asp-controller="Registrations" method="post">

          <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Installation or PPC permit number
              </dt>
              <dd class="govuk-summary-list__value">
                DFG34573453
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Waste carrier, broker or dealer registration number
              </dt>
              <dd class="govuk-summary-list__value">
                DFG34573453
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Waste management licence or environmental permit number
              </dt>
              <dd class="govuk-summary-list__value">
                DFG34573453
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Waste exemption reference
              </dt>
              <dd class="govuk-summary-list__value">
                DFG34573453
              </dd>
            </div>

          </dl>

          <br />

          <div class="govuk-button-group !-margin-top-6">
            <button type="submit" class="govuk-button" data-module="govuk-button" asp-controller="Registrations" asp-action="CompleteWasteLicences" asp-route-registrationId="@Model">
              Mark as reviewed
            </button>

            <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button" asp-controller="Registrations" asp-action="QueryRegistrationTask" asp-route-registrationId="@Model" asp-route-taskName="@RegulatorTaskType.WasteLicensesPermitsAndExemptions.ToString()">
              Query waste licences, permits or exemptions
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</div>
