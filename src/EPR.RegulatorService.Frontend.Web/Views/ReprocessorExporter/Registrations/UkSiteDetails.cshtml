@using EPR.RegulatorService.Frontend.Core.Enums.ReprocessorExporter;
@{
    ViewData["Title"] = "Site address";
}
@model int;

<div class="govuk-width-container ">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">
                <h1 class="govuk-heading-l">
                    Site address
                </h1>
                <dl class="govuk-summary-list">
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Location
                        </dt>
                        <dd class="govuk-summary-list__value">
                            England
                        </dd>
                    </div>
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Site address
                        </dt>
                        <dd class="govuk-summary-list__value">
                            23 Ruby St, London, E12 3SE
                        </dd>
                    </div>
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Site grid reference
                        </dt>
                        <dd class="govuk-summary-list__value">
                            SJ 854 662
                        </dd>
                    </div>
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Address for legal documents and official correspondence
                        </dt>
                        <dd class="govuk-summary-list__value">
                            23 Ruby St, London, E12 3SE
                        </dd>
                    </div>
                </dl>
                <br>
                <div class="govuk-button-group !-margin-top-6">
                    <a href="@Url.Action("CompleteUkSiteDetails", "Registrations", new { registrationId = Model })" class="govuk-link">
                        <button type="submit" class="govuk-button" data-module="govuk-button">
                            Mark as reviewed
                        </button>
                    </a>
                    <a href="@Url.Action("QueryRegistrationTask", "Registrations", new { registrationId = Model, taskName = RegulatorTaskType.SiteAddressAndContactDetails.ToString() })" class="govuk-link">
                        <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                            Query the site address
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </main>
</div>
