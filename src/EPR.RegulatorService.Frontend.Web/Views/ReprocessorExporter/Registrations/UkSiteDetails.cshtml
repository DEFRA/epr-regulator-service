@using EPR.RegulatorService.Frontend.Core.Enums.ReprocessorExporter;

@{
   ViewData["Title"] = "Site address";
}
@model int;

<div class="govuk-width-container ">
  <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">
        <h1 class="govuk-heading-l">
          Site address
        </h1>
        <form asp-controller="Registrations" method="post">
          <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Location
              </dt>
              <dd class="govuk-summary-list__value">
                England
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Site address
              </dt>
              <dd class="govuk-summary-list__value">
                23 Ruby St, London, E12 3SE
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Site grid reference
              </dt>
              <dd class="govuk-summary-list__value">
                SJ 854 662
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Address for legal documents and official correspondence
              </dt>
              <dd class="govuk-summary-list__value">
                23 Ruby St, London, E12 3SE
              </dd>
            </div>
          </dl>
          <br>
          <div class="govuk-button-group !-margin-top-6">
            <button type="submit" class="govuk-button" data-module="govuk-button" asp-controller="Registrations" asp-action="CompleteUkSiteDetails" asp-route-registrationId="@Model">
              Mark as reviewed
            </button>

            <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button" asp-controller="Registrations" asp-action="QueryRegistrationTask" asp-route-registrationId="@Model" asp-route-taskName="@RegulatorTaskType.SiteAddressAndContactDetails.ToString()">
              Query the site address
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</div>
