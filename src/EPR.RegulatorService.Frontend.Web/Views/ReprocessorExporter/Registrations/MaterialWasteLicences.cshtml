@using EPR.RegulatorService.Frontend.Core.Enums.ReprocessorExporter;
@{
    const string title = "Waste licences, permits or exemptions";
    ViewData["Title"] = title;
}
@model int;

<div class="govuk-width-container ">

    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">
                <h1 class="govuk-heading-l">
                    <span class="govuk-caption-l">Plastic</span>
                    @title
                </h1>

                <form asp-controller="Registrations">

                    <dl class="govuk-summary-list">
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Licences, permits or exemptions held&nbsp;
                            </dt>
                            <dd class="govuk-summary-list__value">
                                Pollution, Prevention and Control (PPC) permit
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                PPC permit number
                            </dt>
                            <dd class="govuk-summary-list__value">
                                DFG34573453
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Authorised capacity (tonnes)
                            </dt>
                            <dd class="govuk-summary-list__value">
                                50,000 tonnes/ Annually
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Maximum site capacity&nbsp;
                            </dt>
                            <dd class="govuk-summary-list__value">
                                50,000 tonnes/ Annually
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Contact person for plastic&nbsp;
                            </dt>
                            <dd class="govuk-summary-list__value">
                                Freda Pinto <br> <a href="#" class="govuk-link govuk-link--no-visited-state"> freda.pinto@greenltd.com</a>
                            </dd>
                        </div>
                    </dl>

                    <br>

                    <div class="govuk-button-group !-margin-top-6">
                        <button type="submit" class="govuk-button" data-module="govuk-button" asp-controller="Registrations" asp-action="CompleteMaterialWasteLicences" asp-route-registrationMaterialId="@Model">
                            Mark as reviewed
                        </button>

                        <a class="govuk-button govuk-button--secondary" href="@Url.Action("QueryMaterialTask", "Registrations", new { registrationMaterialId = Model, taskName = RegulatorTaskType.WasteLicensesPermitsAndExemptions })">
                            Query waste licences, permits or exemptions
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>
