@using EPR.RegulatorService.Frontend.Core.Enums.ReprocessorExporter;
@{
    ViewData["Title"] = "Materials authorised on site";
}
@model int;

<div class="govuk-width-container ">

    


  <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">


    <!-- OVERVIEW AND CONTACTS -->
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">
        <h1 class="govuk-heading-l">
          <span class="govuk-caption-l">Green Ltd: 2 Ruby St, London, E12 3SE</span>
          Materials authorised on site
        </h1>

        <form asp-controller="Registrations" method="post">
          <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Waste carrier, broker or dealer registration number
              </dt>
              <dd class="govuk-summary-list__value">
                DFG34573453
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Aluminium
              </dt>
              <dd class="govuk-summary-list__value">
                Not applying for registration
                <br><strong>Reason</strong>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce vulputate aliquet ornare. Vestibulum dolor nunc, tincidunt a diam nec, mattis venenatis sem
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Plastic
              </dt>
              <dd class="govuk-summary-list__value">
                Applying for registration
              </dd>
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Steel
              </dt>
              <dd class="govuk-summary-list__value">
                Applying for registration
              </dd>
            </div>
          </dl>

          <br>

          <div class="govuk-button-group !-margin-top-6">
			      <button type="submit" class="govuk-button" data-module="govuk-button" asp-controller="Registrations" asp-action="CompleteAuthorisedMaterials" asp-route-registrationId="@Model">
				      Mark as reviewed
			      </button>

			      <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button" asp-controller="Registrations" asp-action="QueryRegistrationTask" asp-route-registrationId="@Model" asp-route-taskName="@RegulatorTaskType.MaterialsAuthorisedOnSite.ToString()">
              Query the materials authorised on site
			      </button>
          </div>
        </form>
      </div>

    </div>
  </main>
</div>
