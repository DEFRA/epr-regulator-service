@using EPR.RegulatorService.Frontend.Core.Models.FileUpload
@model FileUploadRequest

 @{
 
    ViewData["Title"] = Localizer["FileUpload.Title"];
}

    <div class="govuk-width-container">
      <main class="govuk-main-wrapper" id="main-content" role="main">
        <h2 class="govuk-heading-l">File Upload</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert">
                <h2 class="govuk-error-summary__title" id="error-summary-title">There is a problem</h2>
                <div class="govuk-error-summary__body">
                    <p>@ViewBag.Message</p>
                </div>
            </div>
        }

          <div class="govuk-grid-row">
              <div class="govuk-grid-column-full">               
                      <div class="govuk-grid-row">
                          <div class="govuk-grid-column-full">
                        <form method="POST" asp-controller="Registrations" asp-action="FileUpload" enctype="multipart/form-data" class="govuk-form-group">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="file">Choose file to upload:</label>
                                <input class="govuk-file-upload" asp-for="MyFile" accept=".txt,.pdf,.docx,.xlsx" required />
                            </div>
                              <input type="hidden" name="FileName" value="testing" />
                            <button class ="govuk-button" type="submit">Upload</button>
                          </form>
                          </div>
                      </div>             
              </div>
          </div>      
      </main>
  </div>
